<% title "New Submission" %>

<%= form_for(@submission) do |f| %>
  
  <div class="field">
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
  </div>
  
  <div class="field">
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
  </div>

  <%= f.submit %>
<% end %>
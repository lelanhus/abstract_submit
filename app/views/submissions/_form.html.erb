<%= form_for(@submission, :html => { :multipart => true }) do |f| %>
  
  <div class="field">
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
  </div>
  
  <div class="field">
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %>
    </p>
  </div>
  
  <div class="field">
    <p>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </p>
  </div>

  <%= f.submit %>
<% end %>
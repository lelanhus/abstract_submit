<% title @conference.name %>

<table>
  <tr>
    <th>Start Date:</th>
    <td><%= @conference.start_date %></td>
  </tr>
  <tr>
    <th>End Date:</th>
    <td><%= @conference.end_date %></td>
  </tr>
  <tr>
    <th>Submission Deadline:</th>
    <td><%= @conference.submission_deadline %></td>
  </tr>
</table>

<table>
  <tr>
    <th>Submission Title</th>
    <th>Primary Author</th>
  </tr>
  
  <% @conference.submissions.each do |sub| %>
    <tr>
      <td><%= link_to sub.title, sub %></td>
      <td><%= link_to sub.authors.first, sub.authors.first %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to "New Submission", new_conference_submission_url(@conference) if @conference.taking_submissions? %>
</p>
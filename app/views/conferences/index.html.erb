<% title "Conferences" %>


<p>
  <%= link_to "Add a new conference", new_conference_url %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Start</th>
    <th>End</th>
    <th>Submission Deadline</th>
  </tr>
<% Conference.with_open_submissions.each do |conf| %>
  <tr>
    <td><%= link_to conf.name, conf %></td>
    <td><%= conf.start_date %></td>
    <td><%= conf.end_date %></td>
    <td><%= submission_deadline_distance(conf) %></td>
  </tr>
<% end %>
</table>

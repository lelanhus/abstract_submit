<% title "New Author" %>

<%= form_for(@author) do |f| %>
  
  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.collection_select :institution_id, Institution.all, :id, :name, :prompt => "Select the author's institution." %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>